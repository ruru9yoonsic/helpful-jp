{% capture accordionButton %}
<svg width="15" height="9" viewBox="0 0 15 9" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M0.330078 1.03906L7.26404 7.93967L14.198 1.03906" stroke="{{ settings.colors_background_1 }}" stroke-width="1"/>
</svg>
{% endcapture %}
<section class="outline--{{ section.id }}">
  <div class="inner--{{ section.id }}">
    <img src="https://cdn.shopify.com/s/files/1/0645/5151/8428/files/top__fv_yuya_with_comments.jpg?v=1680506753" alt="myProfile" width="100%" height="100%">
    {% comment %} <img class="top--accordion-content-img" src="https://cdn.shopify.com/s/files/1/0645/5151/8428/files/IMG_0786_square.jpg?v=1680492190" alt="myProfile" width="100%" height="100%">
    <h2>Thank you for coming</h2> {% endcomment %}
    <ul class="top--accordion">
      <li class="top--accordion-item">
        <h3 class="top--accordion-header">Profile {{ accordionButton}}</h3>
        <div class="top--accordion-content">
          <div class="top--accordion-content-grid">
            <dt>Name</dt>
            <dd>Yuya Wada</dd>
            <dt>Birthday</dt>
            <dd>April, 1997</dd>
            <dt>Hobby</dt>
            <dd>Tennis / Surfine / Bouldering / Poker / NFL / Cooking / Coffee</dd>
            <dt>Job</dt>
            <dd>Shopify front-end engineer<br>from April, 2020</dd>
            <dt>Skill</dt>
            <dd>HTML / CSS (tailwind) / Liquid / JavaScript (jQuery)</dd>
          </div>
        </div>
      </li>
      <li class="top--accordion-item">
        <h3 class="top--accordion-header">Clients {{ accordionButton}}</h3>
        <div class="top--accordion-content">
          {% for article in blogs['works'].articles reversed %}
            <a href="{{ article.url }}">
              <img src="{{ article.image | img_url: 'medium' }}">
              <p>
                {%- if article.metafields.english.title != blank -%}
                  {{ article.metafields.english.title }}
                {%- else -%}
                  {{ article.title }}
                {%- endif -%}
              </p>
            </a>
          {% endfor %}
          <span>scroll →</span>
        </div>
      </li>
      <li class="top--accordion-item">
        <h3 class="top--accordion-header">Resume {{ accordionButton}}</h3>
        <div class="top--accordion-content">
          <p>Getting ready</p>
        </div>
      </li>
      <li class="top--accordion-item">
        <h3 class="top--accordion-header">Contact {{ accordionButton}}</h3>
        <div class="top--accordion-content">
          <div class="top--accordion-content-grid">
            <dt>Email</dt>
            <dd>yuya.wada.san@gmail.com</dd>
            <dt>Facebook</dt>
            <dd><a style="text-decoration: underline;" href="https://www.facebook.com/profile.php?id=100091746930736">Yuya Wada</a></dd>
          </div>
        </div>
      </li>
    </ul>    
  </div>
</section>

<style>
.outline--{{ section.id }} {
  background-color: {{ section.settings.bgColor }};
  padding: {{ section.settings.padding }};
  margin: {{ section.settings.margin }};
}
.inner--{{ section.id }} {
  max-width: 750px;
  margin: 0 auto;
}
.inner--{{ section.id }} .top--accordion-content-img {    
  max-width: 200px;
  max-height: 200px;
  border-radius: 100%;
  display: block;
  margin: 20px auto 0;
}
.inner--{{ section.id }} h2 {
  text-align: center;
  font-size: 2.5rem;
}
.inner--{{ section.id }} ul {
  list-style: none;
  padding: 0;
  margin: -7px auto;
}
.top--accordion {
  background-color: {{ settings.colors_accent_2 }};
  color: #FFF;
  width: 100vw;
  max-width: 750px;
}
.top--accordion .top--accordion-item {
  padding: 20px 10px;
  border-bottom: solid 1px {{ settings.colors_background_1 }};
}
.top--accordion .top--accordion-item h3 {
  padding: 0;
  margin: 0;
  color: {{ settings.colors_background_1 }};
  font-family: {{ settings.type_body_font.family }};
  font-weight: bold;
}
.top--accordion .top--accordion-item .top--accordion-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.top--accordion .top--accordion-item .top--accordion-content {
  padding: 10px;
}
.top--accordion .top--accordion-item:has(a) {
  position: relative;
}
.top--accordion .top--accordion-item .top--accordion-content:has(a) {
  display: flex;
  align-items: center;
  overflow-x: scroll;  
  gap: 10px;
  padding: 10px;
}
.top--accordion .top--accordion-item .top--accordion-content a {  
  color: var(--color-base-text);
  text-decoration: none;
}
.top--accordion .top--accordion-item .top--accordion-content span {  
  color: var(--color-base-text);
  position: absolute;
  bottom: 0;
  right: 10px;
}
.top--accordion .top--accordion-item .top--accordion-content p {
  padding: 0;
  margin: 0;
  color: var(--color-base-text);
}
.top--accordion .top--accordion-item .top--accordion-content .top--accordion-content-grid  {
  display: grid;
  grid-template-columns: 2fr 5fr;
  align-items: center;
  margin-top: 10px;
  row-gap: 15px;
}
.top--accordion .top--accordion-item .top--accordion-content .top--accordion-content-grid td, 
.top--accordion .top--accordion-item .top--accordion-content .top--accordion-content-grid dd {
  margin: 0;
}
@media(width > 750px){
  .top--accordion .top--accordion-item .top--accordion-content .top--accordion-content-grid  {
    grid-template-columns: 150px auto;
  }
  .top--accordion .top--accordion-item .top--accordion-content:has(a) {
    overflow-x: auto;
  }
}
</style>
{% schema %}
{
  "name": "TOP accordion",
  "settings": [
    {
      "type": "color",
      "id": "bgColor",
      "label": "全体の背景色"
    },{
      "type": "text",
      "id": "margin",
      "label": "margin:"
    },{
      "type": "text",
      "id": "padding",
      "label": "padding:"
    }
  ],
  "presets": [
    {
      "name": "TOP accordion"
    }
  ]
}
{% endschema %}

<script>
$(document).ready(function() {

  {% comment %} default {% endcomment %}
  $('.top--accordion-content').hide();
  
  {% comment %} click : header {% endcomment %}
  $('.top--accordion-header').click(function() {
    var $accordionButton = $(this).find('svg');
    var rotation = $accordionButton.data('rotation') || 0;
    rotation += 180;
    $accordionButton.css('transform', 'rotate(' + rotation + 'deg)');
    $accordionButton.data('rotation', rotation);
  
    $(this).toggleClass('active');
    $(this).next('.top--accordion-content').slideToggle();
  });
});  
</script>