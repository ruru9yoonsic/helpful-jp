<section class="outline--{{ section.id }}">
  <div class="inner-md">
    <div>
      <h2 class="head-title">{{ section.settings.title | newline_to_br }}</h2>
    </div>
    <ul class="news-item">
      {% for article in section.settings.blog.articles %}
        <li>
          <a href="{{ article.url }}">
            <div class="news-img">
              <img src="{{ article.image | img_url: '300x300' }}" alt="{{ article.title }}">
            </div>
            <div class="news-date">
              <p>{{ article.created_at | date: '%B %d, %Y' }}</p>
            </div>
            <h3 class="news-text">{{ article.title }}</h3>
          </a>
        </li>
      {% endfor %}
    </ul>  
  </div>
</section>

<style>
.outline--{{ section.id }} {
  background-color: {{ section.settings.bg_color }};
  padding: {{ section.settings.padding }};
  margin: {{ section.settings.margin }};
}

.news-item img {
  width: 100%;
  border-radius: 5px;
}

.inner-md{
  width: 90%;
  margin: 0 auto;
  max-width: 1100px;
}
.head-title {
  font-size: 3.4rem;
}
.news-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  list-style: none;
  margin: 0;
  padding: 0;
}
.news-item li {
  width: 21%;
  margin-right: 3.0303%;
  margin-bottom: 30px;
}
.news-item li a {
  text-decoration: none;
  color: rgb(var(--color-foreground))
}
.news-date {
  font-size: 1.0rem;
  margin: 0 0 5px;
  font-weight: bold;
}
  .news-date p {
    margin: 0 auto;
  }
.news-text {
  font-size: 1.5rem;
  margin: 0;
}
@media(max-width:750px){
  .news-item{
  justify-content: space-between;
  }
  .news-item li {
    width: 48.5%;
    margin: 15px auto;
  }
  .news-date p {
    margin: 0;
  }
}
</style>
{% schema %}
{
  "name": "TOP Blog",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "title",
      "default": "NEWS"
    },{
      "type": "blog",
      "id": "blog",
      "label": "blog"
    },{
      "type": "header",
      "content": "全体の設定"
    },{
      "type": "color",
      "id": "bg_color",
      "label": "背景色"
    },{
      "type": "text",
      "id": "padding",
      "label": "padding:"
    },{
      "type": "text",
      "id": "margin",
      "label": "margin:"
    }
  ],
  "presets": [
    {
      "name": "TOP Blog"
    }
  ]
}
{% endschema %}
